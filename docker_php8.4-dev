FROM ubuntu:24.04

RUN apt-get update && \
    apt-get install -y curl gcc xz-utils libxml2-dev pkg-config make autoconf g++ valgrind && \
    rm -rf /var/lib/apt/lists/

RUN curl -LO https://www.php.net/distributions/php-8.4.15.tar.xz && \
    tar xf php-8.4.15.tar.xz && \
    rm -rf php-8.4.15.tar.xz && \
    cd php-8.4.15 && \
    ./configure --enable-debug --without-sqlite3 --without-pdo-sqlite && \
    make -j$(nproc) && \
    make install && \
    rm -rf /php-8.4.15

COPY . /tmp/simdjson

RUN cd /tmp/simdjson && \
    phpize && \
    ./configure && \
    make -j$(nproc) && \
    make test TESTS="-m --show-diff -j2"
